{
  "name": "ndtan/id-generator",
  "description": "NDT ID Generator \u2014 pluggable PHP ID generation library (UUID v4/v6/v7/v8, ULID, Snowflake, NanoID, KSUID, Mongo ObjectId, ShortUUID) with per-driver configuration and integrations for Laravel & Doctrine.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Tony Nguyen",
      "email": "admin@ndtan.net",
      "homepage": "https://nguyenduytan.com"
    }
  ],
  "require": {
    "php": ">=8.1"
  },
  "autoload": {
    "psr-4": {
      "ndtan\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "ndtan\\Laravel\\NdtIdServiceProvider"
      ]
    }
  },
  "suggest": {
    "laravel/framework": "Use the Laravel ServiceProvider integration.",
    "doctrine/dbal": "Use custom Doctrine types for UUIDv7/ULID."
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.11",
    "vimeo/psalm": "^5.0",
    "phpbench/phpbench": "^1.2"
  },
  "scripts": {
    "test": "phpunit --testdox",
    "analyse": "phpstan analyse && psalm --no-cache",
    "bench": "phpbench run benchmarks --report=default"
  },
  "keywords": [
    "php",
    "uuid",
    "uuidv7",
    "uuid6",
    "uuid8",
    "ulid",
    "snowflake",
    "nanoid",
    "ksuid",
    "mongo",
    "objectid",
    "shortuuid",
    "id-generator",
    "library",
    "ndtan"
  ],
  "support": {
    "issues": "https://github.com/nguyenduytan/NDT-ID-Generator/issues",
    "source": "https://github.com/nguyenduytan/NDT-ID-Generator"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/nguyenduytan"
    },
    {
      "type": "custom",
      "url": "https://nguyenduytan.com"
    }
  ]
}